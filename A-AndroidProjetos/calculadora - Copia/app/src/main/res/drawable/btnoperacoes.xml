<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="13dip" />
            <stroke android:width="1dip" android:color="#A6ACD0" />
            <gradient android:angle="-90" android:startColor="#B3B4B5" android:endColor="#292929" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="130dip" />
            <stroke android:width="1dip" android:color="#A6ACD0" />
            <solid android:color="#56575D" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="13dip" />
            <stroke android:width="1dip" android:color="#4E4EBF" />
            <gradient android:angle="-90" android:startColor="#E2E2E4" android:endColor="#2A2A2B" />
        </shape>
    </item>

</selector>