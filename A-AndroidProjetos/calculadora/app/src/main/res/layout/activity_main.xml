<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#50525B"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtVisor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#2A2C2E"
            android:layout_gravity="end"
            android:text=" 123456789"
            android:padding="10dp"
            android:textAlignment="textEnd"
            android:textColor="#ffffff"
            android:textSize="@dimen/tamanho_texto_visor" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonm1"
            style="@style/estiloBotoesOutros"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margem"
            android:onClick="onClickMemoria"
            android:layout_weight="1"
            android:text="Mc"
            android:textSize="@dimen/tamanho_texto_botoes" />


        <Button
            android:id="@+id/buttonm2"
            style="@style/estiloBotoesOutros"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margem"
            android:onClick="onClickMemoria"
            android:layout_weight="1"
            android:text="M+"
            android:textSize="@dimen/tamanho_texto_botoes" />

        <Button
            android:id="@+id/buttonm3"
            style="@style/estiloBotoesOutros"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margem"
            android:onClick="onClickMemoria"
            android:layout_weight="1"
            android:text="M-"
            android:textSize="@dimen/tamanho_texto_botoes" />

        <Button
            android:id="@+id/buttonm4"
            style="@style/estiloBotoesOutros"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margem"
            android:onClick="onClickMemoria"
            android:layout_weight="1"
            android:text="Mr"
            android:textSize="@dimen/tamanho_texto_botoes" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button1"
            style="@style/estiloBotoesMemoria"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margem"
            android:onClick="onClickOperacoes"
            android:layout_weight="1"
            android:text="C"
            android:textSize="@dimen/tamanho_texto_botoes" />


        <Button
            android:id="@+id/button2"
            style="@style/estiloBotoesMemoria"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margem"
            android:onClick="onClickOperacoes"
            android:layout_weight="1"
            android:text="+/-"
            android:textSize="@dimen/tamanho_texto_botoes" />

        <Button
            android:id="@+id/button3"
            style="@style/estiloBotoesMemoria"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margem"
            android:onClick="onClickOperacoes"
            android:layout_weight="1"
            android:text="%"
            android:textSize="@dimen/tamanho_texto_botoes" />

        <Button
            android:id="@+id/button4"
            style="@style/estiloBotoesOutros"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margem"
            android:onClick="onClickMemoria"
            android:layout_weight="1"
            android:text="«"
            android:textSize="@dimen/tamanho_texto_botoes" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button5"
            style="@style/estiloBotoesNumericos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margem"
            android:layout_weight="1"
            android:onClick="onClickNumeros"
            android:text="7"
            android:textSize="@dimen/tamanho_texto_botoes" />

        <Button
            android:id="@+id/button6"
            style="@style/estiloBotoesNumericos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margem"
            android:onClick="onClickNumeros"
            android:layout_weight="1"
            android:text="8"
            android:textSize="@dimen/tamanho_texto_botoes" />

        <Button
            android:id="@+id/button7"
            style="@style/estiloBotoesNumericos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margem"
            android:onClick="onClickNumeros"
            android:layout_weight="1"
            android:text="9"
            android:textSize="@dimen/tamanho_texto_botoes" />

        <Button
            android:id="@+id/button8"
            style="@style/estiloBotoesOperacoes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margem"
            android:onClick="onClickOperacoes"
            android:layout_weight="1"
            android:text="÷"
            android:textSize="@dimen/tamanho_texto_botoes" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button9"
            style="@style/estiloBotoesNumericos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margem"
            android:onClick="onClickNumeros"
            android:layout_weight="1"
            android:text="4"
            android:textSize="@dimen/tamanho_texto_botoes" />

        <Button
            android:id="@+id/button10"
            style="@style/estiloBotoesNumericos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margem"
            android:onClick="onClickNumeros"
            android:layout_weight="1"
            android:text="5"
            android:textSize="@dimen/tamanho_texto_botoes" />

        <Button
            android:id="@+id/button11"
            style="@style/estiloBotoesNumericos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margem"
            android:onClick="onClickNumeros"
            android:layout_weight="1"
            android:text="6"
            android:textSize="@dimen/tamanho_texto_botoes" />

        <Button
            android:id="@+id/button12"
            style="@style/estiloBotoesOperacoes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margem"
            android:onClick="onClickOperacoes"
            android:layout_weight="1"
            android:text="X"
            android:textSize="@dimen/tamanho_texto_botoes" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button13"
            style="@style/estiloBotoesNumericos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margem"
            android:onClick="onClickNumeros"
            android:layout_weight="1"
            android:text="1"
            android:textSize="@dimen/tamanho_texto_botoes" />

        <Button
            android:id="@+id/button14"
            style="@style/estiloBotoesNumericos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margem"
            android:onClick="onClickNumeros"
            android:layout_weight="1"
            android:text="2"
            android:textSize="@dimen/tamanho_texto_botoes" />

        <Button
            android:id="@+id/button15"
            style="@style/estiloBotoesNumericos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margem"
            android:onClick="onClickNumeros"
            android:layout_weight="1"
            android:text="3"
            android:textSize="@dimen/tamanho_texto_botoes"
            tools:ignore="Suspicious0dp" />

        <Button
            android:id="@+id/button16"
            style="@style/estiloBotoesOperacoes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margem"
            android:onClick="onClickOperacoes"
            android:layout_weight="1"
            android:text="-"
            android:textSize="@dimen/tamanho_texto_botoes" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button17"
            style="@style/estiloBotoesNumericos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margem"
            android:onClick="onClickNumeros"
            android:layout_weight="1"
            android:text="0"
            android:textSize="@dimen/tamanho_texto_botoes" />

        <Button
            android:id="@+id/button18"
            style="@style/estiloBotoesNumericos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margem"
            android:onClick="onClickOperacoes"
            android:layout_weight="1"
            android:text=","
            android:textSize="@dimen/tamanho_texto_botoes" />

        <Button
            android:id="@+id/button19"
            style="@style/estiloBotoesNumericos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margem"
            android:onClick="onClickOperacoes"
            android:layout_weight="1"
            android:text="="
            android:textSize="@dimen/tamanho_texto_botoes" />

        <Button
            android:id="@+id/button20"
            style="@style/estiloBotoesOperacoes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margem"
            android:onClick="onClickOperacoes"
            android:layout_weight="1"
            android:text="+"
            android:textSize="@dimen/tamanho_texto_botoes"/>

    </LinearLayout>


</LinearLayout>